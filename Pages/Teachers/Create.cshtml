@page
@model SerpantWebApp.Pages.Teachers.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Teacher</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input hidden asp-for="Teacher.FilePath"/>
            <h3>[Add Student Details]</h3>
<hr />
            <div class="form-group">
                 @Html.Label("Select User : ")
                 @Html.DropDownListFor(m => m.selectedusername, Model.UsersSelectList, "Select User", new { @class = "form-control" })
                <br />
            </div>
           
            <div class="form-group">
                <label asp-for="Teacher.LastName" class="control-label"></label>
                <input asp-for="Teacher.LastName" class="form-control" />
                <span asp-validation-for="Teacher.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Teacher.FirstName" class="control-label"></label>
                <input asp-for="Teacher.FirstName" class="form-control" />
                <span asp-validation-for="Teacher.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Teacher.EnrollmentDate" class="control-label"></label>
                <input asp-for="Teacher.EnrollmentDate" class="form-control" />
                <span asp-validation-for="Teacher.EnrollmentDate" class="text-danger"></span>
            </div>
             <div class="form-group row">

                <label asp-for="FormFile" class="col-sm-2 col-form-label"></label>

                <div class="col-sm-10">
                    <div class="custom-file">


                        <input asp-for="FormFile" class="custom-file-input" />
                        <label class="custom-file-label">Click here to change photo</label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            @section Scripts {
                @{
                    await Html.RenderPartialAsync("_ValidationScriptsPartial");
                }

                <script>
                    $(document).ready(function(){
                        $('.custom-file-input').on("change", function () {
                            var fileName = $(this).val().split("\\").pop();
                            $(this).next('.custom-file-label').html(fileName);
                        });
                    })
                </script>
                
            }
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>




