@page
@model SerpantWebApp.Pages.Teachers.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h4 class="text-center text-uppercase">Teacher List</h4> 
<p>
    <a asp-page="Create" class="btn btn-sm btn-primary rounded-0 text-uppercase"><i class="fa fa-plus-circle"></i> Create New</a>  
</p>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Teacher[0].FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Teacher[0].EnrollmentDate)
            </th>
            <th>
                <h3>Appproach Your Admin</h3>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Teacher) {
        <tr>
            <td>  
                <img src="~/images/@item.FilePath"
                        class="rounded-circle"   
                        height="40" width="40"   
                        asp-append-version="true" />  
                @item.FullName  
            </td>  
            <td>
                @Html.DisplayFor(modelItem => item.EnrollmentDate)
            </td>
           
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
