@model SerpantWebApp.Pages.Cryptography.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Attendance</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Attendance.LessonSessionID" />
            <div class="form-group">
                <label asp-for="Attendance.CourseID" class="control-label"></label>
                <select asp-for="Attendance.CourseID" class="form-control" asp-items="ViewBag.CourseID"></select>
                <span asp-validation-for="Attendance.CourseID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Attendance.StudentID" class="control-label"></label>
                <select asp-for="Attendance.StudentID" class="form-control" asp-items="ViewBag.StudentID"></select>
                <span asp-validation-for="Attendance.StudentID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Attendance.TeacherID" class="control-label"></label>
                <select asp-for="Attendance.TeacherID" class="form-control" asp-items="ViewBag.TeacherID"></select>
                <span asp-validation-for="Attendance.TeacherID" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Attendance.Presence" /> @Html.DisplayNameFor(model => model.Attendance.Presence)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
