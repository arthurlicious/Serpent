@page
@model SerpantWebApp.Pages.Account.LoginModel
@{
 ViewData["Title"] = "Log in";
}


<p>
    <h3>User Login</h3>
</p>

<div class="container border" style="padding:20px">
    <form method="post">
        <div class="text-danger" asp-validation-summary="All"></div>
        <div class="form-group row">

            <div class="col-2">
                <label asp-for="LoginViewModel.Email"></label>
            </div>
            <div class="col-5">
                <!-- Does the actual binding through asp-for="" -->
                <input type="text" asp-for="LoginViewModel.Email" class="form-control"/>
            </div>
            <span class="text-danger" asp-validation-for="LoginViewModel.Email"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="LoginViewModel.Password"></label>
            </div>
            <div class="col-5">
                <!-- Does the actual binding through asp-for="" -->
                <input type="password" asp-for="LoginViewModel.Password" class="form-control"/>
            </div>
            <span class="text-danger" asp-validation-for="LoginViewModel.Password"></span>
        </div>
       <!-- <div class="row form-check mb-2">
            <div class="col-2">
                <label class="form-check-label" asp-for="LoginViewModel.RememberMe"></label>
            </div>
            <div class="col-5">
                <input type="checkbox" asp-for="LoginViewModel.RememberMe" class="form-check"/>
            </div>
        </div> -->
          <div class="form-group row">
            <div class="col-2">
                <input type="submit" class="btn btn-primary" value="Login" />
            </div>
        </div>
    </form>
</div>


