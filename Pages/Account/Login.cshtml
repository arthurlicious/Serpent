@using AspNetCore.ReCaptcha
@model SerpantWebApp.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Log in";
    Layout = "";
}

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" type="text/css" href="~/css/login.css">
</head>
<body>
    <div class="main">
        <div class="form-container">
            <div class="logo">
                <img src="~/images/jira.svg" alt="Logo" />
            </div>
            <div class="form">
                <h3 class="form-title">Login</h3>
                <form method="post" id="form">
                    <div class="input-group">
                        <label asp-for="LoginViewModel.Email"></label>
                        <!-- Does the actual binding through asp-for="" -->
                        <input type="text" asp-for="LoginViewModel.Email" class="form-control"/>
                    </div>
                    <div class="input-group">
                        <label asp-for="LoginViewModel.Password"></label>
                        <input type="password" asp-for="LoginViewModel.Password" class="form-control"/>
                    </div>
                    <div class="input-group">
                       @Html.ReCaptcha()
                    </div>
                    <div class="error-message">
                        <div class="text-danger" asp-validation-summary="All"></div>
                    </div>
                    <div class="input-group">
                        <input type="submit" class="mybuttonclass purple" name="submit" value="Sign In">
                    </div>
                </form>
                <hr>
                <button name="createacct" class="mybuttonclass black"> <a  asp-page="/Account/Register">Create Account</a></button>
                <br>
            </div>

            <div class="footer">
                &copy; 2022 Serpant Web App <span>|</span>
                <a asp-page="/TermsCondition">Terms</a>
            </div>
        </div>
    </div>
</body>
</html>
