@page
@model SerpantWebApp.Pages.Attendance.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Attendances</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Attendances.SID" />
            <div class="form-group">
                <label asp-for="Attendances.FullName" class="control-label"></label>
                <input asp-for="Attendances.FullName" class="form-control" />
                <span asp-validation-for="Attendances.FullName" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Attendances.presence" /> @Html.DisplayNameFor(model => model.Attendances.presence)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Attendances.Date" class="control-label"></label>
                <input asp-for="Attendances.Date" class="form-control" />
                <span asp-validation-for="Attendances.Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
