@page
@model SerpantWebApp.Pages.SoftwareSecureDeve.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Attendance</h4>
<hr />
<div class="row">
    <div class="col-md-4">
      <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Attendance.CourseID" class="control-label"></label>
                <select asp-for="Attendance.CourseID" class ="form-control" asp-items="ViewBag.CourseID" >
                    <option value="" selected disabled hidden>-- Default is 3 --</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Attendance.StudentID" class="control-label"></label>
                <select asp-for="Attendance.StudentID" class ="form-control" asp-items="ViewBag.StudentID">
                    <option value="" selected disabled hidden>-- Select Student ID --</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Attendance.TeacherID" class="control-label"></label>
                <select asp-for="Attendance.TeacherID" class ="form-control" asp-items="ViewBag.TeacherID">
                    <option value="" selected disabled hidden>-- Select Teacher ID --</option>
                </select>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Attendance.Presence" value="false" disabled/> @Html.DisplayNameFor(model => model.Attendance.Presence)
                </label>
            </div>
            <div class="error-message">
                        <div class="text-danger" asp-validation-summary="All"></div>
                    </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
